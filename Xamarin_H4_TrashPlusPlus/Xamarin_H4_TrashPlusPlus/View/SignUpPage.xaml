<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin_H4_TrashPlusPlus" 
             xmlns:Custom="clr-namespace:Xamarin_H4_TrashPlusPlus.CustomItem"
             x:Class="Xamarin_H4_TrashPlusPlus.View.SignUpPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Text="Trash plus+"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                FontSize="25"
                ></Label>
            <Custom:CustomFrame
                CornerRadius="40,40,0,0"
                Grid.Row="1" 
                BackgroundColor="{StaticResource LightColor}"
                >
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.7*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="0.05*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Text="Opret"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalTextAlignment="Center"
                        FontSize="Large"
                        FontAttributes="Bold">
                    </Label>
                    <StackLayout
                        Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label Text="allerede en bruger?"></Label>
                        <Label Text="Log ind" TextColor="{StaticResource LinkColor}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChangeToLoginCommand}" NumberOfTapsRequired="1"/>
                            </Label.GestureRecognizers></Label>
                    </StackLayout>
                    <Frame
                        Grid.Row="3"
                        Grid.Column="1"
                        BorderColor="{Binding UsernameColor}"
                        BackgroundColor="{StaticResource LightPrimaryColor}"
                        CornerRadius="12"
                        Padding="10,0,10,0"
                        >
                        <local:CustomEntry
                            Placeholder="Brugernavn"
                            Text="{Binding Username}"
                            ></local:CustomEntry>
                    </Frame>
                    <Frame
                        Grid.Row="4"
                        Grid.Column="1"
                        BorderColor="{Binding MailColor}"
                        BackgroundColor="{StaticResource LightPrimaryColor}"
                        CornerRadius="12"
                        Padding="10,0,10,0"
                        >
                        <local:CustomEntry
                            Placeholder="Mail"
                            Text="{Binding Mail}"
                            ></local:CustomEntry>
                    </Frame>
                    <Frame
                        Grid.Row="5"
                        Grid.Column="1"
                        BorderColor="{Binding PasswordColor}"
                        BackgroundColor="{StaticResource LightPrimaryColor}"
                        CornerRadius="12"
                        Padding="10,0,10,0"
                        >
                        <local:CustomEntry
                            IsPassword="True"
                            Placeholder="Password"
                            Text="{Binding Password}"
                            ></local:CustomEntry>
                    </Frame>
                    <Frame
                        Grid.Row="6"
                        Grid.Column="1"
                        BorderColor="{Binding RePasswordColor}"
                        BackgroundColor="{StaticResource LightPrimaryColor}"
                        CornerRadius="12"
                        Padding="10,0,10,0">
                        <local:CustomEntry
                            IsPassword="True"
                            Placeholder="RePassword"
                            Text="{Binding RePassword}"
                            ></local:CustomEntry>
                    </Frame>
                    <Button 
                        Grid.Row="7"
                        Grid.Column="1"
                        Text="Opret bruger"
                        CornerRadius="26"
                        Command="{Binding CreateCommand}"
                        BackgroundColor="{DynamicResource AppPrimaryColor}"></Button>
                </Grid>
            </Custom:CustomFrame>
        </Grid>
    </ContentPage.Content>
</ContentPage>